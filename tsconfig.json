{
    "compilerOptions": {
        // environment
        "lib": ["esnext"],
        "module": "nodenext",
        "skipLibCheck": true,
        "target": "esnext",
        "types": ["node"],

        // module system behavior
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noUncheckedSideEffectImports": true,
        // https://www.typescriptlang.org/docs/handbook/release-notes/typescript-5-7.html#path-rewriting-for-relative-paths
        // can write out imports as .ts, not .js (supports direct execution, recommended by node's
        // docs for type-stripping https://nodejs.org/docs/latest-v22.x/api/typescript.html#type-stripping)
        "rewriteRelativeImportExtensions": true,
        "verbatimModuleSyntax": true,

        // output / publishing
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        // File Layout
        // "rootDir": "./src",
        // "outDir": "./dist",

        // typechecking
        "strict": true,
        "allowJs": true,
        "erasableSyntaxOnly": true,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": ["plan", "**/dist"]
}
